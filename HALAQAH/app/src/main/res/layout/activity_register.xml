<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/gradient"
    >

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp"
        android:fontFamily="serif"
        android:text="NgafalYuk"
        android:textAlignment="center"
        android:textColor="@color/paraf"
        android:textSize="70dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/nama_regis"
        android:layout_width="257dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/email_regis"
        android:layout_centerVertical="true"
        android:background="@drawable/gradient"
        android:hint="nama lengkap"
        android:layout_alignLeft="@+id/email_regis" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="41dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/nama_regis"
        android:background="@color/form"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_toLeftOf="@+id/nama_regis" />

    <EditText
        android:id="@+id/email_regis"
        android:layout_width="257dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_below="@+id/logo"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/gradient"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="41dp"
        android:layout_below="@+id/logo"
        android:layout_toLeftOf="@+id/nama_regis"
        android:layout_toStartOf="@+id/nama_regis"
        android:background="@color/form"
        android:src="@drawable/mail" />

    <EditText
        android:id="@+id/telp_regis"
        android:layout_width="257dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/nama_regis"
        android:layout_marginBottom="219dp"
        android:background="@drawable/gradient"
        android:hint="no telp"
        android:layout_alignLeft="@+id/nama_regis" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="41dp"
        android:layout_alignTop="@+id/telp_regis"
        android:layout_toStartOf="@+id/nama_regis"
        android:background="@color/form"
        android:src="@drawable/ic_dialer_sip_black_24dp"
        android:layout_toLeftOf="@+id/nama_regis" />

    <EditText
        android:id="@+id/password_regis"
        android:layout_width="257dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/nama_regis"
        android:layout_marginBottom="134dp"
        android:background="@drawable/gradient"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_alignLeft="@+id/nama_regis" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/password_regis"
        android:layout_toStartOf="@+id/nama_regis"
        android:background="@color/form"
        android:src="@drawable/ic_security_black_24dp"
        android:layout_toLeftOf="@+id/nama_regis" />

    <Button
        android:id="@+id/register_regis"
        android:layout_width="272dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:background="@color/RightColor"
        android:text="Daftar" />




</RelativeLayout>